<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
			 xmlns:s="library://ns.adobe.com/flex/spark" 
             xmlns:fb="http://ns.adobe.com/flashbuilder/2009" 
			 minWidth="21" minHeight="21" alpha.disabled="0.5">
    
    <!-- host component -->
    <fx:Metadata>
        <![CDATA[ 
        [HostComponent("ro.calin.component.MenuButton")]
        ]]>
    </fx:Metadata>
	
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>
    
	<!-- Transitions for the cool animations. -->
	<s:transitions>
		<s:Transition toState="over" autoReverse="true">
			<s:Move target="{overFill}" duration="200"/>
		</s:Transition>
		<s:Transition toState="up" autoReverse="true">
			<s:Move target="{overFill}" duration="200"/>
		</s:Transition>
	</s:transitions>
	
	<!-- Layer 1: thin gray line to the right -->
	<s:Rect right="0" width="0.5" top="0" bottom="0">
		<s:fill>
			<s:SolidColor color="gray" alpha="0.5"/>
		</s:fill>
	</s:Rect>
	
	<!-- Layer 2: colored rectagle for animation -->
	<s:Rect id="overFill" y="{hostComponent.height}" y.over="0"  
			width="100%" height="100%">
		<s:fill>
			<s:SolidColor color="{hostComponent.entry.color}"/>
		</s:fill>
	</s:Rect>
	
	<!-- Layer 3: The actuall label. -->
	<s:Label id="labelDisplay" textAlign="center" verticalAlign="middle" maxDisplayedLines="1"
			 horizontalCenter="0" verticalCenter="1" fontSize="{hostComponent.entry.fontSize}" 
			 color="{hostComponent.entry.fontColor}" left="10" right="10" top="2" bottom="2" />
    
</s:SparkSkin>
