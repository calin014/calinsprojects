<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:component="ro.calin.component.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("ro.calin.component.CategoryViewer")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="idle" />
		<s:State name="sliding" />
	</s:states>
	
	<!-- SkinParts
	name=thumbnailStrip, type=spark.components.DataGroup, required=true
	-->
	
	<!--need to adjust height to match the maximum scale amount-->
	<s:DataGroup id="thumbnailStrip" height="100%" width="{220 * 1.2}" >
		<s:layout>
			<s:VerticalLayout gap="-1" horizontalAlign="center"/>
		</s:layout>
		<s:itemRenderer>
			<fx:Component>
				<s:ItemRenderer>
					<component:Category categoryData="{data}" skinClass="ro.calin.component.skin.CategorySkin" buttonMode="true"/>
				</s:ItemRenderer>
			</fx:Component>
		</s:itemRenderer>
	</s:DataGroup>
</s:Skin>
