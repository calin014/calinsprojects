<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 creationComplete="init(event)">
	<s:layout>
		<s:BasicLayout/>
	</s:layout>
	<fx:Script>
		<![CDATA[
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			
			import ro.calin.controller.CSlideShower;
			import ro.calin.model.MSlideShower;
			
			[Bindable] public var model:MSlideShower;
			[Bindable] public var controller:CSlideShower;

			protected function init(event:FlexEvent):void
			{
				//if pics have different resolution we must scale at each change
				
				//solutions
				//1. the slideshow images are defined diferently(other pic folder, larger images)
				//2. all the images will be sufficiently large
				
//				var scale:int = this.width/img.width + 1;
//				img.scaleX = scale;
//				img.scaleY = scale;
			}

			protected var lastImage:BitmapData = null; 
			protected function img_completeHandler(event:Event):void
			{
				var currentImage:BitmapData = Bitmap(img.content).bitmapData;
				if(lastImage != null) {
					xFade.stop();
					xFade.bitmapFrom = lastImage;
					xFade.bitmapTo = currentImage;
					xFade.play();
				}
				
				lastImage = currentImage;
			}

		]]>
	</fx:Script>
	<fx:Declarations>
		<s:CrossFade id="xFade" target="{img}" duration="1000" />
	</fx:Declarations>
	
	<mx:Image horizontalCenter="0" verticalCenter="0" id="img" source="{model.image}" />
</s:Group>
