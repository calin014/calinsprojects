<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" minWidth="500" minHeight="500">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("ro.calin.component.PictureViewer")]
	</fx:Metadata>
	<s:states>
		<s:State name="normal" />
		<s:State name="changing" />
	</s:states>
	
	<mx:Image id="picture" verticalCenter="0" horizontalCenter="0" />
	<s:Button id="leftButton" label="&lt;" verticalCenter="0" left="0" visible="{hostComponent.hasLeftRight}" />
	<s:Button id="rightButton" label="&gt;" verticalCenter="0" right="0" visible="{hostComponent.hasLeftRight}" />
</s:Skin>
