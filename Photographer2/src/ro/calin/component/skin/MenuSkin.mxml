<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("ro.calin.component.Menu")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="mainmenu" />
		<s:State name="submenu" />
	</s:states>
	
	<!-- SkinParts
	name=logo, type=mx.controls.Image, required=false
	name=bar, type=spark.components.ButtonBar, required=true
	-->
	
	<s:Rect width="100%" height="50" alpha="0.5">
		<s:fill>
			<s:SolidColor color="black"/>
		</s:fill>
	</s:Rect>
	<s:HGroup>
		<mx:Image id="logo" useHandCursor="true"/>
		<s:DataGroup id="bar" width="100%" height="100%" verticalCenter="0">
			<s:layout>
				<s:HorizontalLayout gap="0" />
			</s:layout>
			<s:itemRenderer>
				<fx:Component>
					<s:ItemRenderer>
						<fx:Script>
							<![CDATA[
								import ro.calin.event.MenuEvent;
							]]>
						</fx:Script>
						<s:Button width="200" height="50" 
								  skinClass="ro.calin.component.skin.MenuButtonSkin" label="{data.label}">
							<s:click>
								<![CDATA[
									dispatchEvent(new MenuEvent(MenuEvent.MENU_ITEM_CLICK, data, true));
								]]>
							</s:click>
						</s:Button>
					</s:ItemRenderer>
				</fx:Component>
			</s:itemRenderer>
		</s:DataGroup>
	</s:HGroup>
</s:Skin>
