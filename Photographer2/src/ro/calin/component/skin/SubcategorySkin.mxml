<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("ro.calin.component.Subcategory")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="normal" />
		<s:State name="hovered" />
	</s:states>
	
	<s:transitions>
		<s:Transition>
			<s:Parallel>
				<s:Scale targets="{[back, image]}" duration="200"/>
				<s:Fade target="{image}" duration="200"/>
			</s:Parallel>	
		</s:Transition>
	</s:transitions>
	
	<s:Rect id="back" width="{hostComponent.thumbnailWidth}" 
			height="100%" scaleX.hovered="{hostComponent.scale}" 
			scaleY.hovered="{hostComponent.scale}">
		<s:fill>
			<s:SolidColor color="black"/>
		</s:fill>
	</s:Rect>
	
	<mx:Image id="image" width="{hostComponent.thumbnailWidth}" 
			  height="100%" scaleX.hovered="{hostComponent.scale}" 
			  scaleY.hovered="{hostComponent.scale}" 
			  alpha="0.3" alpha.hovered="1.0"/>
</s:Skin>
